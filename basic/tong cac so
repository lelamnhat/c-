#include <iostream>
using namespace std;

int n;
void nhap() {
    cout << "Nhap so n: ";
    cin >> n;
    while (n < 1 || n > 10000) {
        cout << "Nhap lai so n (1 <= n <= 10000): ";
        cin >> n;
    }
}

